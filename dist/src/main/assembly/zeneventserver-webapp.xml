<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>webapp</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <scope>provided</scope>
            <unpack>false</unpack>
            <outputDirectory>lib</outputDirectory>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>org.eclipse.jetty:jetty-deploy</include>
                <include>org.eclipse.jetty:jetty-start</include>
                <include>org.eclipse.jetty:jetty-server</include>
                <include>javax.servlet:servlet-api</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <scope>provided</scope>
           <unpack>false</unpack>
            <outputDirectory>lib/ext</outputDirectory>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>com.codahale.metrics:metrics-core</include>
                <include>com.codahale.metrics:metrics-jetty8</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.zenoss.zep:zep-webapp</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <includes>
                    <include>org.zenoss.zep:zep-webapp:war</include>
                </includes>
                <outputDirectory>webapps/zeneventserver</outputDirectory>
                <unpack>true</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
    <fileSets>
        <fileSet>
            <directory>src/assembly/bin</directory>
            <outputDirectory>bin/</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>src/assembly/etc</directory>
            <outputDirectory>etc/</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0600</fileMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>target/generated-sources/conf</directory>
            <outputDirectory>etc/</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0600</fileMode>
            <filtered>false</filtered>
        </fileSet>
        <!-- Only way I can figure out for creating empty directory -->
        <fileSet>
            <directory>src/assembly/bin</directory>
            <directoryMode>0755</directoryMode>
            <outputDirectory>log/</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/assembly/bin</directory>
            <directoryMode>0755</directoryMode>
            <outputDirectory>var/run/</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../core/src/main/sql</directory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <outputDirectory>share/zeneventserver/sql/</outputDirectory>
            <includes>
                <include>**/*.sql</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../core/src/main/resources</directory>
            <directoryMode>0755</directoryMode>
            <fileMode>0600</fileMode>
            <outputDirectory>etc/zeneventserver/</outputDirectory>
            <includes>
                <include>**/logback.xml</include>
            </includes>
        </fileSet>
    </fileSets>

</assembly>
