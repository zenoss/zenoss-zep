    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <SVN-Url>${svn.url}</SVN-Url>
                            <SVN-Revision>${svn.revision}</SVN-Revision>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <!-- Run `svnversion -n` and store output in svn.revision property. -->
                    <!-- Run `svn info` and store URL in output in svn.url property. -->
                    <execution>
                        <id>get-svn-version</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <exportAntProperties>true</exportAntProperties>
                            <target>
                                <exec executable="svnversion" outputproperty="svn.revision" logError="true"
                                      failonerror="false" failifexecutionfails="false">
                                    <arg value="-n" />
                                </exec>
                                <exec executable="svn" failonerror="false" failifexecutionfails="false" logError="true">
                                    <arg value="info" />
                                    <redirector outputproperty="svn.url">
                                        <outputfilterchain>
                                            <linecontainsregexp>
                                                <regexp pattern="^URL:" />
                                            </linecontainsregexp>
                                            <tokenfilter>
                                                <replaceregex pattern="^URL:\s*(.*)"
                                                              replace="\1" />
                                            </tokenfilter>
                                            <striplinebreaks/>
                                        </outputfilterchain>
                                    </redirector>
                                </exec>
                            </target>
                        </configuration>
                    </execution>
                    <execution>
                        <id>create-test-schema</id>
                        <phase>pre-integration-test</phase>
                        <configuration>
                            <target unless="skipITs">
                                <exec executable="bash" dir=".." failonerror="true">
                                    <arg value="./populate_schema.sh" />
                                    <arg value="--dbtype" />
                                    <arg value="${zep.jdbc.protocol}" />
                                    <arg value="--dbhost" />
                                    <arg value="${zep.jdbc.hostname}" />
                                    <arg value="--dbport" />
                                    <arg value="${zep.jdbc.port}" />
                                    <arg value="--dbname" />
                                    <arg value="${zep.test.jdbc.dbname}" />
                                    <arg value="--dbadminuser" />
                                    <arg value="${zep.jdbc.admin.username}" />
                                    <arg value="--dbadminpass" />
                                    <arg value="${zep.jdbc.admin.password}" />
                                    <arg value="--dbuser" />
                                    <arg value="${zep.jdbc.username}" />
                                    <arg value="--dbpass" />
                                    <arg value="${zep.jdbc.password}" />
                                    <arg value="--force" />
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>drop-test-schema</id>
                        <phase>post-integration-test</phase>
                        <configuration>
                            <target unless="skipITs">
                                <echo message="Dropping database: ${zep.test.jdbc.dbname}" />
                                <exec executable="bash" dir=".." failonerror="true">
                                    <arg value="./drop_schema.sh" />
                                    <arg value="--dbtype" />
                                    <arg value="${zep.jdbc.protocol}" />
                                    <arg value="--dbhost" />
                                    <arg value="${zep.jdbc.hostname}" />
                                    <arg value="--dbport" />
                                    <arg value="${zep.jdbc.port}" />
                                    <arg value="--dbname" />
                                    <arg value="${zep.test.jdbc.dbname}" />
                                    <arg value="--dbadminuser" />
                                    <arg value="${zep.jdbc.admin.username}" />
                                    <arg value="--dbadminpass" />
                                    <arg value="${zep.jdbc.admin.password}" />
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                        <configuration>
                            <reportNameSuffix>${zep.jdbc.protocol}</reportNameSuffix>
                            <systemPropertyVariables>
                                <zep.jdbc.protocol>${zep.jdbc.protocol}</zep.jdbc.protocol>
                                <zep.jdbc.hostname>${zep.jdbc.hostname}</zep.jdbc.hostname>
                                <zep.jdbc.port>${zep.jdbc.port}</zep.jdbc.port>
                                <zep.jdbc.dbname>${zep.test.jdbc.dbname}</zep.jdbc.dbname>
                                <zep.jdbc.username>${zep.jdbc.username}</zep.jdbc.username>
                                <zep.jdbc.password>${zep.jdbc.password}</zep.jdbc.password>
                                <zep.index.dir>${zep.test.index.dir}_it</zep.index.dir>
                                <zep.amqp.uri>${zep.test.amqp.uri}</zep.amqp.uri>
                                <!-- Don't load ZenPack plug-ins when running integration tests -->
                                <zep.plugins.external.disabled>true</zep.plugins.external.disabled>
                                <!--
                                Disable background indexing during integration testing.
                                -->
                                <zep.index.enabled>false</zep.index.enabled>
                            </systemPropertyVariables>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
