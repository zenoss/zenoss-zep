                        <artifactId>jetty-start</artifactId>
                        <version>${jetty.version}</version>
                        <classifier>shaded</classifier>
                    </dependency>
                    <dependency>
                        <groupId>org.eclipse.jetty</groupId>
                        <artifactId>jetty-util-ajax</artifactId>
                        <version>${jetty.version}</version>
                    </dependency>
